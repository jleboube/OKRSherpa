# OKR Sherpa Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# Google Gemini API Configuration
# ============================================
# Get your API key from: https://aistudio.google.com/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Google OAuth Configuration
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Authorized redirect URI: https://okrsherpa.app/auth/callback (or http://localhost:3000/auth/callback for dev)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# ============================================
# MongoDB Configuration
# ============================================
# MongoDB connection details for user data storage
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGODB_URI=mongodb://admin:your_secure_password_here@mongodb:27017/okr_sherpa?authSource=admin

# ============================================
# Google OAuth Configuration (Future)
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# GOOGLE_REDIRECT_URI=https://okrsherpa.app/auth/callback

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production

# Application URL (for Cloudflare Tunnel)
# This will be your public-facing domain
APP_URL=https://okrsherpa.app

# Port configuration (internal - mapped via docker-compose)
# External port 7337 is mapped in docker-compose.yml
INTERNAL_PORT=8080

# ============================================
# Security Configuration
# ============================================
# Generate a secure secret with: openssl rand -base64 32
# SESSION_SECRET=your_session_secret_here

# ============================================
# Cloudflare Tunnel Configuration (Reference)
# ============================================
# Configure your cloudflared tunnel to point to:
# - Local Address: http://localhost:7337
# - Public Hostname: okrsherpa.app
#
# Example cloudflared config snippet:
# ingress:
#   - hostname: okrsherpa.app
#     service: http://localhost:7337
#   - service: http_status:404
